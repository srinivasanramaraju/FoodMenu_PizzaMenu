<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sramaraj_a3.cs442.com.pizzamenu" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PizzaListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PizzaDetailActivity"
            android:label="@string/title_pizza_detail"
            android:parentActivityName=".PizzaListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PizzaListActivity" />
        </activity>
    </application>

</manifest>
